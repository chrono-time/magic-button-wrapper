{
  "version": "1.0.2",
  "name": "magic-button-wrapper",
  "description": "A React component that wraps UI elements to automatically handle click event load states.",
  "keywords": [
    "react",
    "button",
    "loader",
    "spinner",
    "success",
    "error",
    "ui",
    "magic-button"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/chrono-time/magic-button-wrapper.git"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0",
