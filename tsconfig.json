// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",          
    "moduleResolution": "bundler",
    "declaration": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,         
    "verbatimModuleSyntax": true      

  },
  "include": ["src", "src/index.ts"]
}
